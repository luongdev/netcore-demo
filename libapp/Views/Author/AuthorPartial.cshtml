@model Author
<h3>@Model.Name</h3>
<h4>Book Count: @Model.Books?.Count</h4>
@if (Model.Books?.Count == 0)
{
    <a>View List</a>

}
else
{
    <a asp-controller="Book" asp-action="Index" asp-route-authorId="@Model.AuthorId">Book</a>
}

<a asp-controller="Author" asp-action="Update" asp-route-id="@Model.AuthorId">Update</a>
<a asp-controller="Author" asp-action="Delete" asp-route-id="@Model.AuthorId">Delete</a>